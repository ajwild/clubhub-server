{
  "name": "clubhub-server",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nexus build --output .nexus/build/src",
    "dev": "npm run dev:firestore & npm run dev:nexus",
    "dev:firestore": "firebase emulators:start --only firestore",
    "dev:nexus": "env-cmd nexus dev",
    "format": "xo --fix",
    "start": "node .nexus/build/src",
    "test": "npm run test:lint && npm run test:tsc && npm run test:unit",
    "test:lint": "xo",
    "test:tsc": "tsc --noEmit",
    "test:unit": "jest"
  },
  "dependencies": {
    "@google-cloud/firestore": "^3.8.2",
    "fp-ts": "^2.6.2",
    "js-data": "^4.0.0-beta.4",
    "js-data-adapter": "^1.0.1",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.21.0",
    "nexus-plugin-jwt-auth": "^1.1.1",
    "nexus-plugin-shield": "^0.1.2",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@nexus/schema": "^0.14.0-next.2",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.4",
    "@types/ramda": "^0.27.6",
    "env-cmd": "^10.1.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-jest": "^23.13.2",
    "firebase-tools": "^8.3.0",
    "jest": "^26.0.1",
    "ts-essentials": "^6.0.5",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3",
    "xo": "^0.30.0"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "envs": [
      "jest",
      "node"
    ],
    "overrides": [
      {
        "files": "!./**/*.test.ts",
        "plugins": [
          "functional"
        ],
        "extends": [
          "plugin:functional/external-recommended",
          "plugin:functional/recommended"
        ]
      },
      {
        "files": "./**/*.test.ts",
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/all"
        ],
        "rules": {
          "jest/no-hooks": 0
        }
      }
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
